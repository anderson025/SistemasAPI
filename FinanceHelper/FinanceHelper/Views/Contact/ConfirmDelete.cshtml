@model ContactModel
@{
    ViewData["Title"] = "Novo Contato";
}
<div class="text-center">
    <h3>Realmente deseja apagar o contato: @Model.Name</h3>
</div>

    <div class="d-flex justify-content-center">
        <a role="button" class="btn btn-secondary mx-1" asp-controller="Contact" asp-action="Index">Cancelar</a>
        <a role="button" class="btn btn-danger mx-1" asp-controller="Contact" asp-action="Delete" asp-route-id="@Model.Id">Confirmar</a>
    </div>
