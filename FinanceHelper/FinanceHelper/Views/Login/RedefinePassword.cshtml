@model RedefinePasswordModel;
@{
    Layout = "_LayoutSignedOut";
    ViewData["Title"] = "Redefinir Senha";
}

<div class="d-flex col-12 justify-content-center">
    <div class="col-6 mb-3">
        @if (TempData["ErrorMessage"] != null) {
            <div>
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
                    @TempData["ErrorMessage"]
                </div>
            </div>
        }
        <form asp-controller="Login" asp-action="SendLinkForPasswordRedefinition" method="post">
            <div class="form-group">
                <label for="login">Login</label>
                <input type="text" asp-for="Login" class="form-control" id="login">
                @Html.ValidationMessageFor(x => x.Login)
            </div>
            <div class="form-group mb-3">
                <label for="email">Email</label>
                <input type="text" asp-for="Email" class="form-control" id="email">
                @Html.ValidationMessageFor(x => x.Email)
            </div>
            <div class="d-flex justify-content-end">
                <a role="button" class="btn btn-secondary mx-1" asp-controller="Login" asp-action="Index">Voltar</a>
                <button type="submit" class="btn btn-primary">Redefinir Senha</button>
            </div>

        </form>
    </div>
</div>