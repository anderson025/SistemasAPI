@model UserModel
@{
    ViewData["Title"] = "Confirmar Deleção";
}
<div class="text-center">
    <h3>Realmente deseja apagar o usuário @Model.Name?</h3>
</div>

<div class="d-flex justify-content-center">
    <a role="button" class="btn btn-secondary mx-1" asp-controller="User" asp-action="Index">Cancelar</a>
    <a role="button" class="btn btn-danger mx-1" asp-controller="User" asp-action="Delete" asp-route-id="@Model.Id">Confirmar</a>
</div>
